{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "description": "A simple web component",
  "scripts": {
    "build": "lerna exec -- rollup --config ../../rollup.config.js",
    "build:watch": "lerna exec --parallel -- rollup --config ../../rollup.config.js --watch",
    "test": "jest --passWithNoTests",
    "clean": "rimraf packages/**/dist",
    "lint": "yarn lint:lit-analyzer && yarn lint:eslint",
    "lint:eslint": "eslint 'packages/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer packages/*/src/**/*.{js,ts}",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --node-resolve --watch",
    "serve:prod": "MODE=prod yarn serve",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm my-element.bundled.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@custom-elements-manifest/analyzer": "0.5.7",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "3.0.0",
    "@rollup/plugin-typescript": "8.3.2",
    "@storybook/addon-a11y": "6.5.8",
    "@storybook/addon-actions": "6.5.8",
    "@storybook/addon-essentials": "6.5.8",
    "@storybook/addon-links": "6.5.8",
    "@storybook/web-components": "6.5.8",
    "@types/d3": "^7.1.0",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "@web/dev-server": "0.1.31",
    "@web/dev-server-legacy": "1.0.0",
    "@web/dev-server-rollup": "0.3.17",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "babel-loader": "8.2.5",
    "eslint": "8.15.0",
    "eslint-plugin-jest": "26.1.5",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "lerna": "4.0.0",
    "lit-analyzer": "1.2.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "rollup": "2.72.1",
    "rollup-plugin-import-map": "2.2.2",
    "rollup-plugin-summary": "1.4.0",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "^28.0.2",
    "ts-loader": "8.4",
    "tslib": "2.4.0",
    "typescript": "4.6.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "customElements": "custom-elements.json"
}
