{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "description": "A simple web component",
  "scripts": {
    "build": "lerna exec -- rollup --config ../../rollup.config.js",
    "build:watch": "lerna exec --parallel -- rollup --config ../../rollup.config.js --watch",
    "test": "jest --passWithNoTests",
    "clean": "rimraf packages/**/dist",
    "lint": "yarn lint:lit-analyzer && yarn lint:eslint",
    "lint:eslint": "eslint 'packages/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer packages/*/src/**/*.{js,ts}",
    "format": "prettier \"**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --node-resolve --watch",
    "serve:prod": "MODE=prod yarn serve"
  },
  "license": "MIT",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.5.7",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-replace": "3.0.0",
    "@rollup/plugin-typescript": "8.3.0",
    "@types/d3": "^7.1.0",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "@web/dev-server": "0.1.28",
    "@web/dev-server-legacy": "0.1.7",
    "@web/dev-server-rollup": "0.3.13",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "eslint": "8.2.0",
    "eslint-plugin-jest": "26.1.5",
    "jest": "^27.3.1",
    "lerna": "4.0.0",
    "lit-analyzer": "1.2.1",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "rollup": "2.59.0",
    "rollup-plugin-import-map": "2.2.2",
    "rollup-plugin-summary": "1.3.0",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "4.4.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "customElements": "custom-elements.json"
}